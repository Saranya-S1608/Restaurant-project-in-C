    else { printf(".....................]Thank you[..........................");
          return 0; 
    }
}
void veg(){
   
    printf("1.Tiffen\n");
    printf("2.Lunch\n");
    printf("3.Dinner\n");
    printf("Enter your choice: \a\a\a\a\a\a\a\a\a");
     int n;
    scanf("%d",&n);
    switch(n){
        case 1:   tf();break;
        case 2:   ln();break;
        case 3:   dn();break;
        default :printf("Invalid Choice");
    }
}
void tf(){
        int k,n;
        printf("1.Idly        -Rs.8\n");
        printf("2.Dosa        -Rs.15\n");
        printf("3.Pongal      -Rs.30\n");
        printf("4.Poori       -Rs.20\n");
        printf("5.Paniyaaram  -Rs.20\n");
        printf("6.Chappathi   -Rs.10\n");
        printf("7.Idiyappam   -Rs.30\n");
        printf("8.vada        -Rs.5\n");
        printf("Enter your choice: \a\a\a\a\a\a\a\a\a");
        scanf("%d",&k);
        int a[]={8,15,30,20,20,10,30,5};
        printf("Quantity: \a\a\a\a\a\a\a\a\a");
        scanf("%d",&n);
        int tot=a[k-1]*n;
       printf("Total bill: %d\n",tot);
}
